<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#a0000000">

    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/a9d" />

    <TextView
        android:id="@+id/widget_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/widget_image"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/widget_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/widget_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/widget_image"
        android:progress="10" />

    <ImageView
        android:id="@+id/widget_theme"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="26dp"
        android:layout_toRightOf="@+id/widget_image"
        android:src="@mipmap/a910" />

    <LinearLayout
        android:id="@+id/widget_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/widget_love"
        android:layout_toRightOf="@+id/widget_theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_last"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/b12" />

        <ImageView
            android:id="@+id/widget_play"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/b13" />

        <ImageView
            android:id="@+id/widget_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/b11" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_love"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="26dp"
        android:src="@mipmap/b14" />
</RelativeLayout>